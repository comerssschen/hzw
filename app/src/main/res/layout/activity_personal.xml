<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/mytoolbar" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/personal_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:textColor="@color/color_33"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/ivLogo"
        app:layout_constraintTop_toTopOf="@+id/ivLogo" />


    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="16dp"
        android:gravity="end"
        android:paddingVertical="15dp"
        android:paddingEnd="18dp"
        android:singleLine="true"
        android:textColor="@color/color_99"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="手机号"
        android:textColor="@color/color_33"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPhone" />


    <TextView
        android:id="@+id/tvCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:gravity="end"
        android:paddingVertical="15dp"
        android:paddingEnd="18dp"
        android:singleLine="true"
        android:textColor="@color/color_99"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="单位"
        android:textColor="@color/color_33"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCompany"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCompany" />

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:gravity="end"
        android:paddingVertical="15dp"
        android:paddingEnd="18dp"
        android:singleLine="true"
        android:textColor="@color/color_99"
        app:layout_constraintTop_toBottomOf="@+id/tvCompany" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="职务"
        android:textColor="@color/color_33"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvLevel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLevel" />

    <TextView
        android:id="@+id/tvLoginOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/common_gray_20dp"
        android:gravity="center"
        android:paddingVertical="13dp"
        android:text="退出登录"
        android:textColor="#A3ABBA"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tvLevel" />
</androidx.constraintlayout.widget.ConstraintLayout>